<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/Main_Layout_Padding"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Your Age Range"
            android:id="@+id/textView"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:paddingLeft="@dimen/Textview_Left_Padding"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ages"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/textView" android:layout_alignStart="@+id/textView"
            android:focusableInTouchMode="true" android:focusable="true" android:longClickable="true">

            </Spinner>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Your Heartbeat Range"
            android:id="@+id/textView2"
            android:paddingLeft="@dimen/Textview_Left_Padding"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heartbeats" android:longClickable="true" android:focusable="true"
            android:focusableInTouchMode="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/status" android:layout_below="@+id/ages" android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" android:paddingLeft="@dimen/Textview_Left_Padding"
            android:paddingTop="@dimen/Textview_Top_Padding"/>

</LinearLayout>